@page
@model RazorPage.Pages.Admin.Combos.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "LayoutAdmin";
}

@if (Model.cart != null && Model.cart.Count>0)
    {
<h3>Cart</h3>
<form method="post" asp-page="create" asp-page-handler="update">
    <table border="1">
        <tr>
            <th>Image</th>
            <th>Action</th>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Discount(%)</th>
            <th>Sub Total</th>
        </tr>
        @foreach (var item in Model.cart)
        {
            <tr align="center">
                <td><img src="~/uploads/@item.ImageLink" width="120" height="100"/></td>
                <td align="center">
                    <a asp-page="create" asp-page-handler="delete" asp-route-id="@item.ProductId">X</a>
                </td>
                <td>@item.Name</td>
                <td>@item.UnitPrice</td>
                <td><input type="number" name="quantities" value="@item.Quantity" min="1" style="width: 50px;" /></td>
                <td>@item.ProductDiscount</td>
                <td>
                    $@(item.UnitPrice * item.Quantity)
                </td>
            </tr>
        }
        <tr>
            <td colspan="6" align="right">Total</td>
            <td align="center">$@Model.Total</td>
        </tr>
    </table>
    <input type="submit" value="Update" />
</form>
<form method="post" asp-page="create" asp-page-handler="submit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Combo.ComboName" class="control-label"></label>
        <input asp-for="Combo.ComboName" class="form-control" />
        <span asp-validation-for="Combo.ComboName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Combo.Price" class="control-label"></label>
        <input type="number" asp-for="Combo.Price" class="form-control" />
        <span asp-validation-for="Combo.Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Combo.Discount" class="control-label"></label> (%)
        <input type="number" asp-for="Combo.Discount" class="form-control" />
        <span asp-validation-for="Combo.Discount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Combo.ComboDescription" class="control-label"></label>
        <input asp-for="Combo.ComboDescription" class="form-control" />
        <span asp-validation-for="Combo.ComboDescription" class="text-danger"></span>
    </div>
    <div class="form-group form-check">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="Combo.ComboStatus" /> isActive
        </label>
    </div>
    <div>
        <h4 class="text-danger">@Model.Message</h4>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" />
    </div>
</form>
<a asp-page="./AddComboDetail">Add product</a>
    } else
    {
<h1>Cart is empty</h1>
<a asp-page="./AddComboDetail">Add product</a>
    }
<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
