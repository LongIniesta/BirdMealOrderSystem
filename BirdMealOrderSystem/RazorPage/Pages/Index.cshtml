@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<link rel="stylesheet" type="text/css" href="css/Login.css" />
<section class="h-100 gradient-form" >
    <div class="container py-5 h-100" id="myDiv">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
                <div class="card rounded-3 text-black">
                    <div class="row g-0">
                        <div class="col-lg-6">
                            <div class="card-body p-md-5 mx-md-4">

                                <div class="text-center">
                                    <h4 class="mt-1 mb-5 pb-1">Bird Meall System Order</h4>
                                </div>

                                <form method="post">
                                    <p>Please login your account</p>
                                    <div class="form-outline mb-4">
                                        <label asp-for="@Model.LoginDTOInfor.phone"></label>
                                        <input type="text" asp-for="@Model.LoginDTOInfor.phone" class="form-control"
                                               placeholder="Phone number" />
                                        <span asp-validation-for="@Model.LoginDTOInfor.phone" class="text-danger"></span>
                                    </div>
                                    <div class="form-outline mb-4">
                                        <label asp-for="@Model.LoginDTOInfor.password"></label>
                                        <input type="password" asp-for="@Model.LoginDTOInfor.password" class="form-control" placeholder="Password" />
                                        <span asp-validation-for="@Model.LoginDTOInfor.password" class="text-danger"></span>
                                    </div>
                                    <div class="text-center pt-1 mb-5 pb-1">
                                        <button class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" type="submit">
                                            Login
                                        </button>
                                        <span class="text-danger">@Model.Message</span>
                                        <a class="text-muted" href="#!">Forgot password?</a>
                                    </div>
                                    <div class="d-flex align-items-center justify-content-center pb-4">
                                        <p class="mb-0 me-2">Not already have an account?</p>
                                        <a asp-page="./Register" class="btn btn-primary">Register</a>
                                    </div>

                                </form>

                            </div>
                        </div>
                        <div style="background-image: url('images/miniback.png'); background-size: cover; background-position: center">
                            <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                                <h4 class="mb-4">Nguyen Bao Long _ SE161068</h4>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
