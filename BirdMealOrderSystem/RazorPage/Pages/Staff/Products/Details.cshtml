@page
@using BussinessObject;
@model RazorPage.Pages.Staff.Products.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "LayoutStaff";
}

<div class="d-flex justify-content-between">
    <a asp-page="./Index">
        <img src="~/images/back-icon-3.png" style="padding-left: 30px;" />
    </a>
    <div>
    </div>
    <div>
    </div>
</div>
<div class="d-flex justify-content-center">
    <span class="mx-2 span-custom"><a style="font-weight: 500; color: #5A5A5A; text-decoration: none;" asp-page="./Index">Orders</a></span>
    <span> / </span>
    <span class="mx-2" style="font-weight: 500; color: #000;">Details</span>
</div>
<h1 class="text-center mt-5 mb-5">DETAILS</h1>

<div class="card shadow p-3 mb-5 bg-white rounded" style="margin: 0 200px 0 200px;">
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.ImageLink)
        </dt>
        <dd class="col-sm-10">
            <img src="~/uploads/@Model.Product.ImageLink" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.ProductName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.ProductName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.UnitInStock)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.UnitInStock)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.UnitPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.UnitPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.ProductDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.ProductDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.NutritionalIngredients)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.NutritionalIngredients)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.UserManual)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.UserManual)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Unit)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Unit)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.ProductSattus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.ProductSattus)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.ProductDiscount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.ProductDiscount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Ratingavg)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Ratingavg)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Supplier)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Supplier.SupplierName)
        </dd>
    </dl>
    <div class="d-flex justify-content-center">
        <button class="btn-primary rounded-pill px-4 py-2"><a asp-page="./Edit" asp-route-id="@Model.Product.ProductId" style="color: #fff; text-decoration: none; font-weight: 600;">Edit</a></button>
    </div>
</div>

<div>
    @foreach (OrderProductDetail d in Model.listOrderProductDetai)
    {
        <h4>
            @d.Order.User.UserName
        </h4>
        <h5>
            @d.Feedback
        </h5>
        <h6>
            @d.Rating sao
        </h6>
        <br />
    }
</div>