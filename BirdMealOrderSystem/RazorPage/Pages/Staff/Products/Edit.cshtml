@page
@model RazorPage.Pages.Staff.Products.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "LayoutStaff";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product.ProductId" />
            <input type="hidden" asp-for="Product.ImageLink" />

            <img src="~/uploads/@Model.Product.ImageLink" height="200" width="200" />
            <div class="form-group">
                <label for="imageFile">Select an image to change:</label>
                <input type="file" class="form-control-file" id="imageFile" name="file">
            </div>
            <div class="form-group">
                <label asp-for="Product.ProductName" class="control-label"></label>
                <input asp-for="Product.ProductName" class="form-control" />
                <span asp-validation-for="Product.ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.UnitInStock" class="control-label"></label>
                <input asp-for="Product.UnitInStock" class="form-control" />
                <span asp-validation-for="Product.UnitInStock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.UnitPrice" class="control-label"></label>
                <input type="number" asp-for="Product.UnitPrice" class="form-control" />
                <span asp-validation-for="Product.UnitPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.ProductDescription" class="control-label"></label>
                <input asp-for="Product.ProductDescription" class="form-control" />
                <span asp-validation-for="Product.ProductDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.NutritionalIngredients" class="control-label"></label>
                <input asp-for="Product.NutritionalIngredients" class="form-control" />
                <span asp-validation-for="Product.NutritionalIngredients" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.UserManual" class="control-label"></label>
                <input asp-for="Product.UserManual" class="form-control" />
                <span asp-validation-for="Product.UserManual" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Unit" class="control-label"></label>
                <input asp-for="Product.Unit" class="form-control" />
                <span asp-validation-for="Product.Unit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.ProductDiscount" class="control-label"></label> (%)
                <input type="number" asp-for="Product.ProductDiscount" class="form-control" />
                <span asp-validation-for="Product.ProductDiscount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.SupplierId" class="control-label"></label>
                <select asp-for="Product.SupplierId" class="form-control" asp-items="ViewBag.SupplierId"></select>
                <span asp-validation-for="Product.SupplierId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Product.ProductSattus" /> isActive
                </label>
            </div>
            <div class="form-group">
                @for (var i = 0; i < Model.listCategory.Count; i++)
                {
                    <div class="form-check">
                        @if (Model.Product.Categories.Any(p => p.CategoryId == Model.listCategory[i].CategoryId))
                        {
                            <input class="form-check-input" checked="checked" type="checkbox" id="item-@i" name="selectedItems" value="@Model.listCategory[i].CategoryId">
                        }
                        else
                        {
                            <input class="form-check-input" type="checkbox" id="item-@i" name="selectedItems" value="@Model.listCategory[i].CategoryId">
                        }
                        <label class="form-check-label" for="item-@i">
                            @Model.listCategory[i].CategoryName
                        </label>
                    </div>
                }
            </div>
            <h3 class="text-danger">@Model.Message</h3>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

