@page
@model RazorPage.Pages.Staff.Combos.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "LayoutStaff";
}

<h1 class="text-center mt-5 mb-5">COMBOS MANAGEMENT</h1>
<div class="card shadow p-3 mb-5 bg-white rounded" style="margin: 0 200px 0 200px;">
    <form method="post">
        <h1 class="text-center">Search</h1>
        <input class="form-control" type="text" name="strsearch" />
        <div class="d-flex justify-content-center mt-1">
            <input class="btn-primary rounded-pill px-4 py-2 " type="submit" name="search" value="Search" />
        </div>
    </form>
</div>

<table class="table">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Combo[0].ComboName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Combo[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Combo[0].Ratingavg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Combo[0].Discount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Combo[0].ComboDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Combo[0].ComboStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Combo)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ComboName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ratingavg)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Discount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ComboDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ComboStatus)
                </td>
                <td>
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Action
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" asp-page="./Edit" asp-route-id="@item.ComboId">Edit</a>
                            <a class="dropdown-item" asp-page="./Details" asp-route-id="@item.ComboId">Details</a>
                            <a class="dropdown-item" asp-page="./Delete" asp-route-id="@item.ComboId">Delete</a>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex justify-content-center">
    <button class="btn-primary rounded-pill px-4 py-2" asp-page="Create"><a asp-page="Create" style="color: #fff; text-decoration: none; font-weight: 600;">Create New</a></button>
</div>